
@{
    ViewBag.Title = "ViewInvoiceItems";
}
@model List<LaundryManagement.Models.InvoiceItem>

<h2>Invoice Items</h2>
<table class="table">
    <thead>
        <tr>
            <th>InvoiceID</th>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.InvoiceID</td>
                <td>@item.ItemName</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice</td>
                <td>@(item.Quantity * item.UnitPrice)</td>
            </tr>
        }
    </tbody>
</table>
else
{
<p>No invoice items found.</p>
}


